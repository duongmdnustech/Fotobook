<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <% if current_user.uid === user.uid then %>
        <%= link_to "Show my account", profile_path %>
      <% else %>
        <%= link_to "Show this user", user_path(user.uid) %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
